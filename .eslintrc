{
  "extends": "eslint:recommended",
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "keyword-spacing": 2,
    "indent": [2, 2, {"VariableDeclarator": { "var": 2, "let": 2, "const": 3}, "SwitchCase": 1}],
    "no-console": 0,
    "space-before-blocks": 2,
    "quotes": [2, "single", {"avoidEscape": true}],
    "space-infix-ops": 2,
    "strict": ["error", "global"],
    "curly": ["error", "all"],
    "prefer-const": "error"
  }
}
